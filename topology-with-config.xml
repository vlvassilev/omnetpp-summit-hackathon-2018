<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="urn:ietf:params:xml:ns:netconf:base:1.0">
  <networks xmlns="urn:ietf:params:xml:ns:yang:ietf-network">
    <network>
      <network-id>example-network</network-id>
      <node>
        <node-id>br0</node-id>
        <termination-point xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
          <tp-id>p0</tp-id>
        </termination-point>
        <termination-point xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
          <tp-id>p1</tp-id>
        </termination-point>
        <termination-point xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
          <tp-id>p2</tp-id>
        </termination-point>
        <netconf-connect-params xmlns="urn:tntapi:netconf-node">
          <user>root</user>
          <password>change-me</password>
          <server>10.0.0.100</server>
          <ncport>830</ncport>
        </netconf-connect-params>
<config xmlns="urn:tntapi:netconf-node">
  <bridge xmlns="urn:ietf:params:xml:ns:yang:ietf-network-bridge">
    <ports>
      <port>
        <name>p0</name>
      </port>
      <port>
        <name>p1</name>
      </port>
      <port>
        <name>p2</name>
      </port>
    </ports>
  </bridge>
  <flows xmlns="urn:ietf:params:xml:ns:yang:ietf-network-bridge-flows">
    <flow>
      <id>p0-to-p1</id>
      <match>
        <in-port>p0</in-port>
        <ethernet-match>
          <ethernet-source>
            <address>00:00:00:00:00:00</address>
          </ethernet-source>
          <ethernet-destination>
            <address>00:00:00:00:00:01</address>
          </ethernet-destination>
        </ethernet-match>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p1</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>p0-to-p2</id>
      <match>
        <in-port>p0</in-port>
        <ethernet-match>
          <ethernet-source>
            <address>00:00:00:00:00:00</address>
          </ethernet-source>
          <ethernet-destination>
            <address>00:00:00:00:00:02</address>
          </ethernet-destination>
        </ethernet-match>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p2</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>p1-to-p0</id>
      <match>
        <in-port>p1</in-port>
        <ethernet-match>
          <ethernet-source>
            <address>00:00:00:00:00:01</address>
          </ethernet-source>
          <ethernet-destination>
            <address>00:00:00:00:00:00</address>
          </ethernet-destination>
        </ethernet-match>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p0</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>p1-to-p2</id>
      <match>
        <in-port>p1</in-port>
        <ethernet-match>
          <ethernet-source>
            <address>00:00:00:00:00:01</address>
          </ethernet-source>
          <ethernet-destination>
            <address>00:00:00:00:00:02</address>
          </ethernet-destination>
        </ethernet-match>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p2</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>p2-to-p0</id>
      <match>
        <in-port>p2</in-port>
        <ethernet-match>
          <ethernet-source>
            <address>00:00:00:00:00:02</address>
          </ethernet-source>
          <ethernet-destination>
            <address>00:00:00:00:00:00</address>
          </ethernet-destination>
        </ethernet-match>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p0</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>p2-to-p1</id>
      <match>
        <in-port>p2</in-port>
        <ethernet-match>
          <ethernet-source>
            <address>00:00:00:00:00:02</address>
          </ethernet-source>
          <ethernet-destination>
            <address>00:00:00:00:00:01</address>
          </ethernet-destination>
        </ethernet-match>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p1</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>unmatched-from-p0</id>
      <match>
        <in-port>p0</in-port>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p1</out-port>
          </output-action>
        </action>
        <action>
          <order>1</order>
          <output-action>
            <out-port>p2</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>unmatched-from-p1</id>
      <match>
        <in-port>p1</in-port>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p0</out-port>
          </output-action>
        </action>
        <action>
          <order>1</order>
          <output-action>
            <out-port>p2</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
    <flow>
      <id>unmatched-from-p2</id>
      <match>
        <in-port>p2</in-port>
      </match>
      <actions>
        <action>
          <order>0</order>
          <output-action>
            <out-port>p0</out-port>
          </output-action>
        </action>
        <action>
          <order>1</order>
          <output-action>
            <out-port>p1</out-port>
          </output-action>
        </action>
      </actions>
    </flow>
  </flows>
  <interfaces xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces">
    <interface>
      <name>p0</name>
      <type
        xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd</type>
      <port-name xmlns="urn:ietf:params:xml:ns:yang:ietf-network-bridge">p0</port-name>
    </interface>
    <interface>
      <name>p1</name>
      <type
        xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd</type>
      <port-name xmlns="urn:ietf:params:xml:ns:yang:ietf-network-bridge">p1</port-name>
    </interface>
    <interface>
      <name>p2</name>
      <type
        xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd</type>
      <port-name xmlns="urn:ietf:params:xml:ns:yang:ietf-network-bridge">p2</port-name>
    </interface>
  </interfaces>
  <nacm xmlns="urn:ietf:params:xml:ns:yang:ietf-netconf-acm">
  </nacm>
</config>
      </node>
      <node>
        <node-id>host0</node-id>
        <termination-point xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
          <tp-id>p0</tp-id>
        </termination-point>
        <netconf-connect-params xmlns="urn:tntapi:netconf-node">
          <user>root</user>
          <password>change-me</password>
          <server>10.0.0.10</server>
          <ncport>830</ncport>
        </netconf-connect-params>
        <config xmlns="urn:tntapi:netconf-node">
          <nacm xmlns="urn:ietf:params:xml:ns:yang:ietf-netconf-acm">
          </nacm>
          <interfaces xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces">
            <interface>
              <name>p0</name>
              <type
                xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd</type>
              <ethernet-like xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces-ethernet-like">
                <mac-address>00:00:00:00:00:00</mac-address>
              </ethernet-like>
            </interface>
          </interfaces>
          <traffic-generator xmlns="urn:omnetpp:summit:2018:xml:ns:yang:traffic-generator">
            <frame-size>1514</frame-size>
            <interframe-gap>12</interframe-gap>
            <src-address>00:00:00:00:00:00</src-address>
            <dst-address>00:00:00:00:00:02</dst-address>
          </traffic-generator>
        </config>

      </node>
      <node>
        <node-id>host1</node-id>
        <termination-point xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
          <tp-id>p0</tp-id>
        </termination-point>
        <config xmlns="urn:tntapi:netconf-node">
          <nacm xmlns="urn:ietf:params:xml:ns:yang:ietf-netconf-acm">
          </nacm>
          <interfaces xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces">
            <interface>
              <name>p0</name>
              <type
                xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd</type>
              <ethernet-like xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces-ethernet-like">
                <mac-address>00:00:00:00:00:01</mac-address>
              </ethernet-like>
            </interface>
          </interfaces>
        </config>
        <netconf-connect-params xmlns="urn:tntapi:netconf-node">
          <user>root</user>
          <password>change-me</password>
          <server>10.0.0.11</server>
          <ncport>830</ncport>
        </netconf-connect-params>

      </node>
      <node>
        <node-id>host2</node-id>
        <termination-point xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
          <tp-id>p0</tp-id>
        </termination-point>
        <config xmlns="urn:tntapi:netconf-node">
          <nacm xmlns="urn:ietf:params:xml:ns:yang:ietf-netconf-acm">
          </nacm>
          <interfaces xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces">
            <interface>
              <name>p0</name>
              <type
                xmlns:ianaift="urn:ietf:params:xml:ns:yang:iana-if-type">ianaift:ethernetCsmacd</type>
              <ethernet-like xmlns="urn:ietf:params:xml:ns:yang:ietf-interfaces-ethernet-like">
                <mac-address>00:00:00:00:00:02</mac-address>
              </ethernet-like>
            </interface>
          </interfaces>
        </config>
        <netconf-connect-params xmlns="urn:tntapi:netconf-node">
          <user>root</user>
          <password>change-me</password>
          <server>10.0.0.12</server>
          <ncport>830</ncport>
        </netconf-connect-params>
      </node>
      <link xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
        <source>
          <source-node>host0</source-node>
          <source-tp>p0</source-tp>
        </source>
        <destination>
          <dest-node>br0</dest-node>
          <dest-tp>p0</dest-tp>
        </destination>
        <link-id>host0.p0-br0.p0</link-id>
      </link>
      <link xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
        <source>
          <source-node>host1</source-node>
          <source-tp>p0</source-tp>
        </source>
        <destination>
          <dest-node>br0</dest-node>
          <dest-tp>p1</dest-tp>
        </destination>
        <link-id>host1.p0-br0.p1</link-id>
      </link>
      <link xmlns="urn:ietf:params:xml:ns:yang:ietf-network-topology">
        <source>
          <source-node>br0</source-node>
          <source-tp>p2</source-tp>
        </source>
        <destination>
          <dest-node>host2</dest-node>
          <dest-tp>p0</dest-tp>
        </destination>
        <link-id>br0.p2-host2.p0</link-id>
      </link>
    </network>
  </networks>
</config>
